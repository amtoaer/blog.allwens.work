extends partial/layout.pug

block site_title
    != page.title + ' • ' + config.title

block description
    - var desc = page.desc || page.title + ' - ' + config.author;
    meta(name='description', content=desc)

block container
    include mixins/post.pug
    .post
        article.post-block
            .post-content
                if page.type==='友链'
                    h3
                        = '我的友链'
                    each friend in page.friends
                        a(target='_blank',href=friend.url,title=friend.name,class='friendurl')
                            .frienddiv 
                                .frienddivleft 
                                    img(class='myfriend',src=friend.img)
                                .frienddivright 
                                    .friendname 
                                        =friend.name
                                    .friendinfo 
                                        =friend.desc
                    != page.content
                    include partial/comment.pug
                else 
                    != page.content


block copyright
    include partial/copyright.pug